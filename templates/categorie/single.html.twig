    {% if articles is not empty %}
        <div class="mx-3">
            <ul>
                {% for article in articles %}
                    <li><a href="{{ path('singleArticle', {id:article.id}) }}">{{article.titre}}</a></li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
